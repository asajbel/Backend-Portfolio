<div class="container">
	<section class="row">
		<article class="col-xl-9 col-lg-8 col-md-7 bg-white p-4">
			<h1 class="text-teal">Contact</h1>
		    <hr>
		    <form id="contactForm" method="POST" action="/contact">
			  <div class="form-group">
			    <label for="name">Name</label>
			    <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
          <small id="nameNull" class="error form-text text-danger" > Please enter a name</small>
			  </div>
			  <div class="form-group">
			    <label for="email">Email</label>
			    <input type="email" class="form-control" id="email" name="email" placeholder="email@email.email" required>
          <small id="emailNull" class="error form-text text-danger" > Please enter a valid email address</small>
			  </div>
			  <div class="form-group">
			    <label for="subject">Subject</label>
			    <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
          <small id="subjectNull" class="error form-text text-danger" > Please enter a subject</small>
			  </div>
			  <div class="form-group">
			    <label for="text">Message</label>
			    <textarea class="form-control" id="text" name="text" rows="10" required></textarea>
          <small id="textNull" class="error form-text text-danger" > Please include a message</small>
			  </div>
				<button
					class="g-recaptcha btn btn-primary bg-teal bdr-teal"
					data-sitekey="6Lc9rjsUAAAAACE-R_yQDnsXLhMW7Wi8Dohu8Xlf"
					data-callback="formSubmit"
          data-size="invisible">
					Submit
				</button>
			</form>
			{{#if success}}
				<div class="alert alert-success mt-2" role="alert">
				  {{success}}
				</div>
			{{/if}}
			{{#if error}}
				<div class="alert alert-danger mt-2" role="alert">
				  {{error}}
				</div>
			{{/if}}
		</article>
		{{> sidebar }}
	</section>
</div>

<script src="./assets/js/contact.js"></script>